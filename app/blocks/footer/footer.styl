.footer
	background: colorBlack
	padding: 50px 0

.footer-column
	padding:0 10px
	text-align: center
	margin-bottom: 20px

	&__list
		display: inline-block;
		border-top: 2px solid colorOrange;
		
	&__item
		padding: 5px 5px 5px 0
		text-align: left;

	&__link
		color colorGreyWhite

		&:hover
			text-decoration: none
			color colorOrange
			cursor: pointer

.contacts
	color: #ccc8c8
	text-align: center

	&__head
		padding: 7px 0;
		font-size: 26px;
		border-top: 2px solid colorOrange;
		display: inline-block;

	&__address
		max-width: 150px;
		margin: 10px auto 0;
		line-height: 22px;
		
	.phone
		margin-top: 10px;
		float: none

	.phone__group,
	.phone__img
		float: none

	.phone__img,
	.phone__number
		font-size:16px

	.phone__callback-link
		margin-top: 20px;

		&:hover
			color: #fff

.public
	color colorGreyWhite
	margin-top: 25px;
	clear: both;
	text-align: center;

	&__text
		border-top: 2px solid colorOrange;
		padding: 5px 0;
		display: inline-block;

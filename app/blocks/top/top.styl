.top
	background: white
	//border-bottom: 1px solid #e4e4e4;
	box-shadow: 0 2px 0 0 white;
	width: 100%
	font-size: 14px
	height: 45px


.options
	float: left

.auth-block
	position: relative
	float: right

	.menu-top
		display: none


	&__inner
		padding 14px 15px


.drop-menu
	position: absolute
	top 48px
	right: 0
	display: block;
	border: 1px solid #ccc;
	background: #fff;
	border-radius: borderRadius
	padding: 5px 0;
	width: 150px
	z-index: 9999;

	&__item
		&:hover
			background: #ddd
	&__link
		display: block
		width: 100%
		padding: 5px 30px
		cursor: pointer

		&:hover
			text-decoration: none

.menu-top
	background: colorBlue
	border-radius: borderRadius
	padding: 12px

	&__item
		padding: 3px 12px;
		float: left

		&:first-child
			border-right: 1px solid rgba(255, 255, 255, 0.57);

	&__text
		display: none
			
	&__link
		display: block
		color: #fff
		position: relative
		cursor: pointer

		&:after
			linkHover(20px,#fff)

		&:hover
			color #fff
			text-decoration: none

			&:after
				color #fff
				text-decoration: none
				opacity: 1;
				transform: scale3d(1, 1, 1) translate3d(0, 0%, 0)

	&__value
		padding: 0px 7px
		background: #fff
		color colorBlue
		border-radius: borderRadius

.drop-btn
	float: right
	background: colorBlue
	border: none;
	padding: 10px 15px
	display: block
	border-radius: borderRadius

	&:before
		content: ""
		display: block
		sprite $user


.toggle-list
	display: none

.disabled .toggle-list
		display: block

.open >.toggle-list
	display: block

@media (min-width: 767px)
	.menu-top

		&__text
			display: inline-block
	.auth-block
		.menu-top
			display: inline-block

	.drop-btn
		display: none
		padding: 12px 15px

	.drop-menu
		width: 100%

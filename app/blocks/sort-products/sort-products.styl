.sort-products
	overflow: hidden;
	margin-top: 45px;

	&__nav
		width: 100%
		text-align: center
		margin-bottom: 20px

		&-item
			display: inline-block
			margin-right: 10px;

		&-link
			text-decoration: none
			&:hover
				text-decoration: none
			&:focus
				text-decoration: none

	&__items
		overflow: hidden;
	&__list
		position: relative

		
	&__item
		padding: 0 10px;
		position: relative

	.owl-buttons
		position: relative
		text-align: center

	.owl-prev
		display: inline-block;
		margin-right: -1px;

		&:before
			content: "";
			width: 0;
			height: 0;
			display: block
			border-top: 10px solid transparent;
			border-left: 20px solid colorBlue;
			border-bottom: 10px solid transparent;
			position: relative;
			top: 1px;
			left: 0;

	.owl-next
		display: inline-block;

		&:after
			content: "";
			width: 0;
			height: 0;
			display: block
			border-top: 10px solid transparent;
			border-right: 20px solid colorBlue;
			border-bottom: 10px solid transparent;
			position: relative;
			top: 1px;
			left: -45px;


.product
/*	border: 1px solid #ddd;*/
	padding: 5px 12px 25px
	position: relative

	&__link
		display: block
		
	&__image
		height: 165px
		overflow: hidden
		display: block

	&__img
		height: auto;
		max-width: 100%;
		
	&__text
		margin-top: 15px
		text-align: left;
		
	&__price
		text-align: center
		margin-top: 50px
		color: colorOrange
		font-weight: bold
		font-size: 18px
		
	&__country
		font-size: 12px
		margin-top: 15px
		
	&__code
		font-size: 12px
		margin-top: 3px

	&__quick-view
		position: absolute;
		background: #fff
		font-weight: bold
		color: colorOrange
		padding: 10px 18px;
		bottom: 16px;
		opacity: 0
		border: 1px solid #ddd;
		font-size: 14px
		transition all 0.7s
		border-radius 4px
		transform: scale3d(0, 0, 0) translate3d(0, -115%, 0)

		&:hover
			background: colorOrange
			border 1px solid colorOrange
			color: #fff;

			
	&:hover .product__quick-view
		opacity: 1
		transition all 0.7s
		cursor: pointer
		transform: scale3d(1, 1, 1) translate3d(0, 0%, 0)
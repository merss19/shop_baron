.product
	/*	border: 1px solid #ddd;*/
	padding: 5px 12px 25px
	position: relative

	&__link
		display: block
		position: relative
		cursor: pointer;

	&__image
		height: 165px
		overflow: hidden
		display: block
		text-align: center

	&__img
		height: auto;
		max-width: 100%;

	&__text
		margin-top: 15px
		text-align: center;


	&__price
		text-align: center
		margin-top: 50px
		color: colorOrange
		font-weight: bold
		font-size: 18px

	&__country
		font-size: 12px
		margin-top: 15px

	&__code
		font-size: 12px
		margin-top: 3px

	&__group
		position: absolute
		right: 0;
		bottom:-7px;
		opacity: 0
		transform: scale3d(0, 0, 0) translate3d(0, -115%, 0)

		&-item
			width: 32px;
			height: 32px;
			text-align: center;
			line-height: 32px;
			background: colorBlue
			color: #fff
			border-radius 4px
			float: left;
			margin-right: 4px;
			cursor: pointer
			border: none;

			&:hover
				background: colorOrange
				transition: all 0.4s

	&__to-cart
		position: relative;
		background: #fff
		font-weight: bold
		color: colorOrange
		padding: 10px 18px;
		bottom: 16px;
		opacity: 0
		border: 1px solid #ddd;
		font-size: 14px
		transition all 0.7s
		border-radius 4px
		text-align: center
		width: 100%;
		transform: scale3d(0, 0, 0) translate3d(0, -115%, 0)

		&:hover
			background: colorOrange
			border 1px solid colorOrange
			color: #fff;


	&:hover .product__to-cart,
	&:hover .product__group
		opacity: 1
		transition all 0.7s
		cursor: pointer
		transform: scale3d(1, 1, 1) translate3d(0, 0%, 0)

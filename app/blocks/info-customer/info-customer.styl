.info-customer
	padding: 35px 0 0 0;

	&__header
		header-3(colorBlue)
		
	&__list
		border: 1px solid colorBlue
		padding: 0 10px

	&__icon
		color: colorOrange
		
	&__item
		width: 100%
		padding: 14px 15px
		text-align: center;
		border-bottom: 1px solid colorBlue

		&:last-child
			border-bottom: none;

			
		&-left
			width: 190px
			display: inline-block;
			text-align: left

		&-rigth
			display: inline-block
			width: 100px
			text-align: right

	&__watch
		cursor: pointer
		position: relative
		border-bottom: 1px dashed colorBlue;
		linkHover(16px,colorBlue)
		display: inline-block
		
	&__text
		cursor: pointer
		width: auto
		display: inline-block
		margin-rigth: 5px;

		&:after
			linkHover(20px,colorBlue)

		&:hover
			text-decoration: none

			&:after
				color #fff
				text-decoration: none
				opacity: 1;
				transform: scale3d(1, 1, 1) translate3d(0, 0%, 0)
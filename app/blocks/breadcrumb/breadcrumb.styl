.breadcrumb
	padding: 10px 0

	&__item
		float: left
		position: relative

		&:first-child .breadcrumb__link
			padding: 10px 10px 10px 0
			colorOrange

	&__link
		display: block
		padding: 10px 15px

		&:after
			background: transparent none repeat scroll 0 0;
			border-right: 1px solid #666;
			border-top: 1px solid #666;
			content: "";
			display: inline-block;
			height: 10px;
			width: 10px;
			position: absolute;
			right: -4px;
			text-indent: -5000px;
			top: 14px;
			transform: rotate(45deg);

		&:hover
			text-decoration: none
			color: colorOrange

	&__home
		color: colorOrange
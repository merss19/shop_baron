.filter
	&__title
		padding: 12px;
		background: colorBlue
		color: #fff;

	&__form

		&-top
			padding: 12px;
			border 1px solid colorBlue
			position: relative
			cursor: pointer
			background: #337ab7;
			color: #fff;
			border-top: 1px solid #fff;

			&:before
				content: '';
				width: 18px;
				height: 2px;
				background: #fff
				position: absolute;
				top: 20px;
				right: 21px;

		&-bottom
			padding: 0 10px

	.filter-drop
		color: colorBlue
		background: #fff
		border 1px solid colorBlue

		&:before
			content: '';
			width: 18px;
			height: 2px;
			background: colorBlue
			position: absolute;
			top: 20px;
			right: 21px;

		&:after
			content: '';
			width: 18px;
			height: 2px;
			background: colorBlue
			position: absolute;
			top: 20px;
			right: 21px;
			transform: rotate(90deg);
			
.slider
	&__scale
		background red
		width: 100%;
		height: 5px;
		margin-top: 10px;
		position: relative

	&__drag
		background colorBlue
		position: relative
		top: -12px;
		width: 30px
		height: 30px
		border-radius: 22px;
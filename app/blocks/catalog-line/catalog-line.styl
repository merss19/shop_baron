.catalog-line
	width: 100%
	height: auto


.catalog

	&__button
		width: 100%
		background: colorOrange
		padding: 12px 16px;
		border: none;
		color: #fff;
		font-weight: bold;
		letter-spacing: 1px;
		text-align: left;
		font-size: 16px
		position: relative
		border-radius: 5px 5px 0 0;
		height: 48px

		&-bars
			sizeWH(25px,2px)
			display: block;
			background: #fff;
			float: right;
			position: relative
			top: 12px

			&:before
				content: ''
				sizeWH(25px,2px)
				display: block
				position: absolute
				top -7px
				background: #fff

			&:after
				content: ''
				sizeWH(25px,2px)
				display: block
				position: absolute
				top 7px
				background: #fff
		
	&__list
		width: 100%;
		border-radius: 0px 0px 4px 4px;
		background: #fff
		font-size: 14px;
		text-align: left;
		border 1px solid colorOrange
		top:46px

		&.dropdown-menu
			padding:0

			&>li>a
				padding: 10px 16px;
				display: block;
				color: #333;
				cursor: pointer;

		&-item
			padding: 0
			border-top: 1px solid colorGreyLigth

		&-link
			padding: 12px 16px;
			display: block;
			color colorGrey
			cursor: pointer
			
			&:hover
				background: colorGreyLigth
				transition: all 0.3s
				text-decoration: none
		&-label
			background: colorRed none repeat scroll 0 0;
			color: #fff;
			display: inline-block;
			font-size: 9px;
			font-weight: 400;
			line-height: 1;
			margin-left: 8px;
			padding: 3px;
			position: relative;

			&:after
				border-color: transparent colorRed transparent transparent;
				border-image: none;
				border-style: solid;
				border-width: 3px;
				content: "";
				margin-top: -3px;
				position: absolute;
				right: 100%;
				top: 50%;

	&__child-list
		display: none
		
		&-item
			padding: 0
		&_link
			padding: 5px 12px
@media (min-width: 520px)
	.cat-products
		&__item
			width: 50%;
@media (min-width: 768px)

	.content
		&__main
			padding: 30px 0 15px 20px;

	.menu-top

		&__text
			display: inline-block
	.auth-block
		.menu-top
			display: inline-block

	.drop-btn
		display: none
		padding: 12px 15px

	.drop-menu
		width: 100%

	.slider
		float right
		padding-left:20px

		&__list
			height: 385px;

	.breadcrumb
		display: block

	.info-customer
		padding: 35px 0 0 35px

	.sort-products
		&__nav
			&-item
				margin-right: 10px;

	.description
		&__text
			display: inline-block

	.action-group
		padding-left:35px

	.product
		&__text
			text-align: left

	.checkout-cart
		table.products-table
			thead
				display: table-header-group;
			tr
				display: table-row
			td,th
				display: table-cell
				text-align: center
			td
				border-bottom: 1px solid #ddd;

				&::before
					content: "";
		&__total
			width: 30%;

	.footer
		&-column
			margin-bottom: 0

	.public
		text-align left

	.products-table
		&__photo
			display: table-cell

@media (min-width: 992px)
	.blocks
		&__inner
			&:first-child
				padding-right: 15px;

	.cat-products
		&__item
			width: 33%;

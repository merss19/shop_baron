
.clearfix:before,
.clearfix:after
	display table
	clear both
	content ''

.inner
	max-width 1230px
	min-width 320px
	padding: 0 15px
	margin: 0 auto
	width: 100%

a{
	color: colorGrey
	text-decoration: none
}
.my-carousel__nav
	position: relative
	z-index: 9999
.right
	float: right
.left
	float: left

.col-20
	width: 20%
	float: left

.col-25
	width: 25%
	float: left

.col-55
	width: 55%
	float: left

.col-75
	width: 75%
	float: left

.tab-content
	transition display 900ms
	display: none;

.tab-content.active-tab
	transition display 900ms
	display: block;

.active-tab
	.btnMain
		color #fff
		background: colorBlue

.content
	&__main
		padding: 50px 0
		
	&__item
		margin-top: 20px

.btnMain
	display: block
	border 1px solid colorBlue
	padding: 12px;
	border-radius 4px
	color colorBlue
	background: #fff


	&:hover
		background: colorBlue
		transition all 0.5s
		color #fff
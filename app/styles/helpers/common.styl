
.clearfix:before,
.clearfix:after
	display table
	clear both
	content ''

.inner
	max-width 1230px
	min-width 320px
	padding: 0 15px
	margin: 0 auto
	width: 100%

a{
	color: colorGrey
	text-decoration: none
}
.my-carousel__nav
	position: relative
	z-index: 9999
.right
	float: right
.left
	float: left

.col-20
	width: 20%
	float: left

.col-25
	width: 25%
	float: left

.col-55
	width: 55%
	float: left

.col-75
	width: 75%
	float: left

.toggle-list
	display: none

.disabled .toggle-list
	display: block

.open >.toggle-list
	display: block


.tab-content
	transition display 900ms
	display: none;

.tab-content.active-tab
	transition display 900ms
	display: block;

.active-tab
	.btnMain
		color #fff
		background: colorBlue
		
	.description__nav-link
		height: 42px

.content
	
	&__main
		padding: 30px 0 15px 0;
		
	&__item
		//padding: 0 15px;

	&__side
		padding: 30px 0 15px 0;

